<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gelaro.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Firebase Auth</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <content src="index.html" />
	<preference name="AndroidLaunchMode" value="singleTask" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access origin="https://codepush.azurewebsites.net" />
    <access origin="https://codepush.blob.core.windows.net" />
    <access origin="https://codepushupdates.azureedge.net" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="CodePushDeploymentKey" value="oczaosIaTkBu8nuFsKJrNz7MvAuX9f73ced3-ac06-4ec8-bd47-223a2dc4c3de" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="CodePushDeploymentKey" value="oczaosIaTkBu8nuFsKJrNz7MvAuX9f73ced3-ac06-4ec8-bd47-223a2dc4c3de" />
    </platform>
    <plugin name="cordova-plugin-code-push" spec="^1.11.17" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-zip" spec="^3.1.0" />
    <plugin name="cordova-plugin-buildinfo" source="npm" />
    <plugin name="cordova-universal-links-plugin-fix" source="npm" />
    <plugin name="cordova-plugin-browsertab" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.1.0" />
    <plugin name="cordova-plugin-customurlscheme" source="npm">
	  <param name="URL_SCHEME" value="com.firebase.cordova" />
	</plugin>
	<universal-links>
		<host name="gelaro.page.link/auth-user" scheme="https" />
		<host name="gelaro-6b52c.firebaseapp.com" scheme="https">
			<path url="/__/auth/callback"/>
		</host>
	</universal-links>
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.4" />
</widget>
